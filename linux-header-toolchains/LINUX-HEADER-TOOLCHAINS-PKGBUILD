# Maintainer: jordan B. <bertieaux.jo@gmail.com>
pkgname="linux"
pkgver="5.8.1"
pkgrel=1
pkgdesc="Linux Packages Headers"
arch=(x86_64)
url=""
license=('GPL')
groups=()
depends=()
makedepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=($pkgname-$pkgver.tar.xz)
noextract=()
md5sums=(ee17763117af02637f9f98bfeee32a09) #autofill using updpkgsums

build() {

  cd "$pkgname-$pkgver"

  echo -e "\nCleanning\n"
  make -j $NB_CORES mrproper

  echo -e "\nMake Headers\n"
  make -j $NB_CORES headers

  echo -e "\nInstall Headers\n"
  find usr/include -name '.*' -delete
  rm usr/include/Makefile
  cp -rv usr/include $LFS/usr
}

package() {
  echo -e "\nNo Install the packages\n"
  cd ..
}
