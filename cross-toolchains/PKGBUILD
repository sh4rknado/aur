_BUILD_DIR=$(pwd)

build() {
  # Prepare package
  _prepare "binutils" "BINUTILS-TOOLCHAINS-PKGBUILD"

  # Make The package
  _make "binutils"

  # Cleanning The package
  _cleanning "binutils"
}

package() {
  echo -e "No Install"
  cd ..
}

# /////////////////////////////////// < CUSTOM PACKAGING > ////////////////////////////////////

_prepare() {
  echo -e "\n Prepare Package $1\n"
  mkdir -pv $1
  cp -avr $2 $1/PKGBUILD
}

_make() {
  cd $1
  makepkg -f
}

_cleanning() {
  cd $_BUILD_DIR
  rm -rfv $1
}
